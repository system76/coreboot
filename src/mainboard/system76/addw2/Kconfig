	string
	default "addw2"

config CBFS_SIZE
	hex
	default 0xA00000

config SUBSYSTEM_VENDOR_ID
	hex
	default 0x1558

config SUBSYSTEM_DEVICE_ID
	hex
	default 0x65e1

