	string
	default "lemp9"

config CBFS_SIZE
	hex
	default 0xA00000

config CONSOLE_POST
	bool
	default y

config ONBOARD_VGA_IS_PRIMARY
	bool
	default y

config UART_FOR_CONSOLE
	int
	default 2

config MAX_CPUS
	int
	default 8

config DIMM_MAX
	int
	default 2

config DIMM_SPD_SIZE
	int
	default 512

config VGA_BIOS_FILE
	string
	default "pci8086,9b41.rom"

config VGA_BIOS_ID
	string
	default "8086,9b41"

config POST_DEVICE
	bool
	default n

