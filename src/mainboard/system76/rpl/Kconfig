	default "addw3" if BOARD_SYSTEM76_ADDW3
	default "bonw15" if BOARD_SYSTEM76_BONW15
	default "gaze18" if BOARD_SYSTEM76_GAZE18
	default "oryp11" if BOARD_SYSTEM76_ORYP11
	default "serw13" if BOARD_SYSTEM76_SERW13

