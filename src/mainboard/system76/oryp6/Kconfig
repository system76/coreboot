	default "oryp6" if BOARD_SYSTEM76_ORYP6
	default "oryp7" if BOARD_SYSTEM76_ORYP7

config MAINBOARD_SMBIOS_PRODUCT_NAME
	default "Oryx Pro"

config MAINBOARD_VERSION
	default "oryp6" if BOARD_SYSTEM76_ORYP6
	default "oryp7" if BOARD_SYSTEM76_ORYP7

config CBFS_SIZE
	default 0xA00000

config CONSOLE_POST
	default y

config ONBOARD_VGA_IS_PRIMARY
	default y

