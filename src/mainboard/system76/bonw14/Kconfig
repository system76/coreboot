	string
	default "bonw14"

config CBFS_SIZE
	hex
	default 0xA00000

config CONSOLE_POST
	bool
	default y

config UART_FOR_CONSOLE
	int
	default 2

config MAX_CPUS
	int
	default 20

config DIMM_MAX
	int
	default 4

config DIMM_SPD_SIZE
	int
	default 512

config POST_DEVICE
	bool
	default n

