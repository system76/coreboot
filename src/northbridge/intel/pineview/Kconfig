config NORTHBRIDGE_INTEL_PINEVIEW
	bool

if NORTHBRIDGE_INTEL_PINEVIEW

config NORTHBRIDGE_SPECIFIC_OPTIONS
	def_bool y
	select HAVE_DEBUG_RAM_SETUP
	select VGA
	select MAINBOARD_HAS_NATIVE_VGA_INIT
	select HAVE_VGA_TEXT_FRAMEBUFFER if MAINBOARD_DO_NATIVE_VGA_INIT
	select INTEL_EDID if MAINBOARD_DO_NATIVE_VGA_INIT
	select INTEL_GMA_ACPI

config VGA_BIOS_ID
	string
	default "8086,a001"

config ECAM_MMCONF_BASE_ADDRESS
	default 0xe0000000

config ECAM_MMCONF_BUS_NUMBER
	int
	default 256

config SMM_RESERVED_SIZE
	hex
	default 0x80000

config FIXED_MCHBAR_MMIO_BASE
	default 0xfed14000

config FIXED_DMIBAR_MMIO_BASE
	default 0xfed18000

config FIXED_EPBAR_MMIO_BASE
	default 0xfed19000

